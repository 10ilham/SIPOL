<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="2dp"
        android:textColorHint="@color/abu_abu_muda"
        android:outlineSpotShadowColor="@color/abu_abu_muda">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tie_Cari"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cari Nama Poli"
            android:singleLine="true"
            android:textSize="13dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <ListView
        android:id="@+id/lv_poli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="65dp"
        />
    <Button
        android:id="@+id/bt_Tambah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:text="Tambah"
        android:textColor="@color/white"
        android:backgroundTint="@color/biru_gelap"

        />

</RelativeLayout>